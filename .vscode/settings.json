{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // auto order imports
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  // tailwind
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "tailwindCSS.experimental.classRegex": [
    ["(?:twMerge|twJoin)\\(([^\\);]*)[\\);]", "[`'\"`]([^'\"`,;]*)[`'\"`]"],
    ["clsx\\(([^]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"]
  ]
}
